/**
 * 首页
 */

Array.prototype.rand = function() {
	this.sort(function () {
		return Math.random() - 0.5;
	});
	return this
};

var countDown = {
	djsStopTime:null,
	event:function(year,month,day,hour,a,b,c,d){
		var now = new Date();
		var endDate = new Date(year,month - 1, day,hour);
		var leftTime = endDate.getTime() - now.getTime();
		var leftSecond = parseInt(leftTime / 1000);
		var day1 = Math.floor(leftSecond / ( 60 * 60 * 24 ));
		day1 = day1<0?0:day1;
		var hours = Math.floor((leftSecond - day1 * 24 * 60 * 60) / 3600);
		hours = hours<0?0:hours;
		var minute = Math.floor((leftSecond - day1 * 24 * 60 * 60 - hours * 3600) / 60);
		minute = minute<0?0:minute;
		var second = Math.floor(leftSecond - day1 * 24 * 60 * 60 - hours * 3600 - minute * 60);
		second = second<0?0:second;
		if(leftTime<=0){
			clearInterval(countDown.djsStopTime)
		}
		document.getElementById(a).innerHTML = day1 + "天";
		document.getElementById(b).innerHTML = hours + "小时";
		document.getElementById(c).innerHTML = minute + "分";
		document.getElementById(d).innerHTML = second + "秒";
		if( day1 <= 0 ){
		  document.getElementById(a).style.display ='none'
		}
	},
	interval:function(year,month,day,hour,a,b,c,d){
		countDown.event(year,month,day,hour,a,b,c,d);
		countDown.djsStopTime = setInterval(function(){
			countDown.event(year,month,day,hour,a,b,c,d)
		},1000)
	}
};


$(function() {
	//倒计时
	//countDown.interval(2016,5,6,10,"days","hours","mins","secs");
	//头部广告关闭
	$(".ad-close").click(function(){
		$(".ad-slide").slideUp(600);
	});
	setTimeout(function(){
		$(".ad-slide").slideUp(600);
	},60000);
	



	//友情链接
	var allH = $(".link-con").height();
	if(allH<=28){
		$(".link-toggle").hide()
	}else{
		$(".link-con").height(28)
	}
	$(".link-toggle").click(function(){
		//var parent = $(this).parent();
		var parent = $(this);
		if(parent.hasClass("link-c")){
			//alert(3)
			parent.removeClass("link-c");
			$(".link-con").animate({"height":"28px"},200)
		}else{
			//alert(2)
			parent.addClass("link-c");
			$(".link-con").animate({"height":allH},200)
		}
	});

	//滑动门
	$("#slideBox").newSlideBox({
		width:$("#slideBox").width(), //默认500
		height:380, //默认300
		pageInfo:{
		pageContent:[" "," "," "," "],//默认为1，2，3，4，5……
			page:true,//是否显示页码,默认显示
			place:"row"//放置位置横行“row”，竖向“col”
		},
		speed:5, //默认一秒
		circle:true //默认不循环显示
	});

	/**首页 分类**/
	$(".cg-box li").hover(function(){
		$(".cg-content").hide();
		$(this).find(".cg-content").show()
	},function(){
		$(this).find(".cg-content").hide()
	})
});
